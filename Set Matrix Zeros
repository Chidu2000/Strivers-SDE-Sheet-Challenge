#include <bits/stdc++.h>

void setZeros(vector<vector<int>> &matrix)
{
	int n = matrix.size();
	int m = matrix[0].size();
	bool first_row = false;
	bool first_col = false;

	// first row zeros
	for(int i=0;i<m;i++){
		if(matrix[0][i]==0){
			first_row = true;
			break;
		}
	}

	// first col zeros
	for(int i=0;i<n;i++){
		if(matrix[i][0]==0){
			first_col = true;
			break;
		}
	}

	//making the corresponding ones zero except first row n col
	for(int i=1;i<n;i++){
		for(int j=1;j<m;j++){
			if(matrix[i][j]==0){
				matrix[0][j]= 0;
				matrix[i][0]= 0;
			}
		}
	}
  
  // set every row n col elements except for the first to be zero
	for(int i=1;i<n;i++){
		for(int j=1;j<m;j++){
			if(matrix[i][0]==0 || matrix[0][j]==0){
				matrix[i][j]= 0;
			}
		}
	}
  
  // if it is true then set every element on the first row to zero
	if(first_col){
		for(int i=0;i<n;i++){
			matrix[i][0] = 0;
		}
	}

   // if it is true then set every element on the first col to zero
	if(first_row){
		for(int i=0;i<m;i++){
			matrix[0][i] = 0;
		}
	}
}
